
<div class=" card accordion" id="post-accordion-{{id}}" data-post-id="{{id}}">
  <div class=" card-body accordion-item">
    <h2 class="accordion-header" id="heading-{{id}}">
      <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{id}}" aria-expanded="true" aria-controls="collapse{{id}}">
        <h1 class="card-title post-title"> {{title}}</h1> <span>by {{user.username}} on {{format_date created_at}}<span>
      </button>
    </h2>
    <div id="collapse{{id}}" class="accordion-collapse collapse " aria-labelledby="heading-{{id}}" data-bs-parent="#post-accordion-{{id}}">
      <div class="card-text accordion-body container">
        <label class="" for="post-title-{{id}}">Edit Title:</label><br>
        <input class="card-title post-title w-100" id="post-title-{{id}}"  value="{{title}}"></input><br>
        <label style="height:100% !important " for="post-content-{{id}}" > Edit Post:</label><br>
        <textarea id="post-content-{{id}}" class="post-content w-100" >{{content}}</textarea>

        <div class="row">
          <button class="save-post-btn col" type="submit" data-post-id="{{id}}" >Save post</button>
          <button class="delete-post-btn col" type="button" data-post-id="{{id}}" >Delete post</button>
        </div>
          
        <br>
        <hr>
        <br>
        
           {{#if @root.loggedIn}}
          
          <form class="comment-form container text-center">
            <div class="col">
              <h1 class="row w-100  m-0" for="comment-body-{{id}}" style="text-align: center !important">Add Comment: </h1>
              <textarea class="row w-100" id="comment-body-{{id}}" name="comment-body"></textarea>
              <button  class=" text-center comment-btn row w-100 " id="data-post-{{id}}" data-post-id="{{id}}" type="submit">add comment</button>
            </div>
          </form>
          {{/if}}
          {{> comments comments}}
      </div>
    </div>
  </div>

 
 
</div>